<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.admin.AdminPanelActivity">

    <TextView
        android:id="@+id/mainheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Panel"
        android:textSize="24dp"
        android:textAlignment="center"
        android:padding="24dp"
        />


    <LinearLayout
        android:id="@+id/stdm"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/mainheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="24dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/allstdCard"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#DAF6B9"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="View Students \n Attendance"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/leaveCard"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#F2A991"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="View Leave \n Application"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stdm"
        android:layout_marginTop="-2dp"
        android:padding="24dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/SrchSTD"
            android:layout_width="160dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="#C3E3ED"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_weight="1"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Create User Attendandce Report"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <Button
            android:id="@+id/logoutbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#8BC34A"/>






</RelativeLayout>